---
import { AppConfig } from '~/utils/app-config';
import Tag from './Tag.astro';

interface Props {
    tags: string[];
    withHref?: boolean;
}

const {
    routes: { tags: tagsRoute }
} = AppConfig;

const { tags, withHref } = Astro.props;
---

<div class="flex flex-wrap">
    {
        tags.map((tag: string) => {
            const element = <Tag tag={tag} withHref={withHref} />;
            return withHref ? (
                <a href={`${tagsRoute}/${tag}`}>{element}</a>
            ) : (
                element
            );
        })
    }
</div>
